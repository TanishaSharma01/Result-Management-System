<!-- include header -->
<%- include('include/_header') %>
<!-- /include header -->

<main id="site-main">
    <div class="container">
        <div class="box-nav d-flex justify-between">
            <div class="filter">
                <a href="/teacher"><i class="fas fa-angle-double-left"></i>All Results</a>
            </div>
        </div>
        <div class="form-title text-center">
            <h2 class="text-dark">Update Result</h2>
            <span class="text-light">Use the below form to update your existing result</span>
        </div>

        <!-- Edit result form -->
        <!-- Form handling -->
        <form method="POST" id="update_result">
            <div class="new_result">
                <div class="form-group">
                    <label for="Roll No." class="text-light">Roll No.</label>
                    <input type="hidden" name="id" value="<%= result._id %>">
                    <input type="number" name="rollno" value="<%= result.rollno %>" required class="form-control" placeholder="Enter Roll No." max="999" min="100">
                </div>
                <div class="form-group">
                    <label for="Name" class="text-light">Name</label>
                    <input type="text" name="name" value="<%= result.name %>" required class="form-control" placeholder="Enter Name" minlength="4" maxlength="20">
                </div>
                <div class="form-group">
                    <label for="D.O.B" class="text-light">Date of Birth</label>
                    <input type="date" name="dob" value="<%= result.dob %>" required class="form-control" placeholder="Enter Date Of Birth" max="2005-12-31" min="1999-01-01">
                </div>
                <div class="form-group">
                    <label for="Score" class="text-light">Score</label>
                    <input type="number" name="score" value="<%= result.score %>" required class="form-control" placeholder="Enter Score" max="100" min="0">
                </div>
                <div class="form-group">
                    <button type="submit" class="btn text-dark update">Submit</button>
                </div>
            </div>
        </form>
    </div>
</main>

<!--include footer -->
<%- include('include/_footer') %>
<!--include footer -->